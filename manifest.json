{
  "name": "Page Positivity Analyzer",
  "version": "1.0",
  "description": "Reads your pages and uses the AFINN-165 dataset to give it a positivity rating",
  "manifest_version": 2,
  "permissions": [
    "pageCapture",
    "declarativeContent",
    "activeTab",
    "tabs"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/blobheart_16x16.png",
      "32": "icons/blobheart_32x32.png",
      "48": "icons/blobheart_48x48.png",
      "128": "icons/blobheart_128x128.png"
    }
  },
  "icons": {
    "16": "icons/blobheart_16x16.png",
    "32": "icons/blobheart_32x32.png",
    "48": "icons/blobheart_48x48.png",
    "128": "icons/blobheart_128x128.png"
  }
}