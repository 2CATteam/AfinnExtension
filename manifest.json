{
  "name": "AFINN Page Analyzer",
  "version": "0.11",
  "description": "Reads your pages and uses the AFINN-165 dataset to give it a positivity rating",
  "manifest_version": 2,
  "permissions": [
    "pageCapture",
    "declarativeContent",
    "activeTab",
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html"
  }
}